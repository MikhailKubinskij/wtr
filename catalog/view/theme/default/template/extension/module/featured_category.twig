{% if heading_title %}
<div class="text-title">
  <div class="content-title">{{ heading_title }}</div>
</div>
{% endif %}
<div class="ftr-module">
  <div class="ftr-cat-row row">
    {% for category in categories %}
    <div class="ftr-cat-col col-lg-2 col-md-3 col-sm-4 col-xs-6 col-6">
      <div class="ftr-cat ftr-cat__main">
        <a href="{{ category.href }}"><img src="{{ category.thumb }}" alt="{{ category.name }}" title="{{ category.name }}"><span class="ftr-cat__name">{{ category.name }}</span></a>
      </div>
    </div>
    {% endfor %}
  </div>
</div>